<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render 'share/errors', object: @job_opportunity %>
      <%= form_with model: @job_opportunity, class: "shadow p-3 mb-3 bg-dark rounded", local: true do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :skills, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :skills, class: "form-control shadow rounded" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :salary, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.number_field :salary, class: "form-control shadow rounded" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :job_level, class: "col-2 col-form-label text-light"%>
          <div class="col-10">
            <%= f.text_field :job_level, class: "form-control shadow rounded" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :end_data, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.date_field :end_data, class: "form-control shadow rounded" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :location, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :location, class: "form-control shadow rounded" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit 'Enviar', class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
</div>