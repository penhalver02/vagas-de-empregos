<h2 class="text-center">Vagas</h2>
<div class="container">
  <div class="row justify-content-md-center">
    <div class="col-8 mt-4">
      <div class="card text-center shadow mb-5 bg-white rounded">
        <% if @job_opportunities.empty?%>
          <p class="alert-heading text-center">Nenhuma vaga criada</p>
        <% else %>
          <% @job_opportunities.each do |job_opportunity| %>
            <div class="card">
              <div class="card-header">
                <%= link_to job_opportunity.title, job_opportunity %>
              </div>
              <div class="card-body">
                <%= job_opportunity.description %>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>

<div class="form-group row justify-content-center">
  <%= link_to 'Cadastrar vaga', new_job_opportunity_path, class: "btn btn-outline-dark btn-lg"%>
</div>