<h2>Detalhes do perfil</h2>

<div  style="width:200px; height:auto">
  <%= image_tag(@perfil.avatar, class: "rounded mx-auto d-block" )if @perfil.avatar.nil? %>
</div>

<%= @perfil.full_name %>
<%= @perfil.social_name %>
<%= l @perfil.date_birth if @perfil.date_birth %>
<%= @perfil.degree %>
<%= @perfil.description %>
<%= @perfil.work_experience %>
<% if user_signed_in?%>
  <% if @perfil.job_opportunities.present?%>
    <% @perfil.job_opportunities.each do |job_perfil| %>
      <p>Participando da vaga: <%= job_perfil.title %></p>
    <% end %>
  <% end %>
<% end %>

<% if headhunter_signed_in?%>
  <%= link_to 'Comentar', new_perfil_comment_path(@perfil) %>
  <% @comments.each do |comment|%>
    <%= comment.message %>
  <% end %>
<% end %>